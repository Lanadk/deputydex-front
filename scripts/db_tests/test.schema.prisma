generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Depute {
  id          Int      @id @default(autoincrement())
  nom         String
  groupe      String
  departement String
  mandats     Mandat[]
}

model Mandat {
  id         Int    @id @default(autoincrement())
  anneeDebut Int
  anneeFin   Int
  deputeId   Int
  depute     Depute @relation(fields: [deputeId], references: [id])
}
